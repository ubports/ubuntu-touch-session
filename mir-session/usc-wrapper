#!/bin/sh

# We need to grab ANDROID_ROOT from /etc/environment, because Mir uses
# it to find input configuration files and autopilot won't work without that.
. /etc/environment
export ANDROID_ROOT

exec unity-system-compositor --enable-num-framebuffers-quirk=true --disable-overlays=false --spinner=$SNAP/usr/bin/unity-system-compositor-spinner $@
